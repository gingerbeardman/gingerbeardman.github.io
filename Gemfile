source "https://rubygems.org"

gem 'bundler'

# require most recent version of Jekyll
gem "jekyll", "~> 4.0"

# required patched version of ffi
gem "ffi"

# required patched version of kramdown
gem "kramdown"

group :jekyll_plugins do
  gem 'jekyll-include-cache'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'jekyll-tagging'
  gem 'liquid'
  gem 'liquid-c'
end

gem "webrick"
