source "https://rubygems.org"

gem 'bundler'

# require most recent version of Jekyll
gem "jekyll"

# required patched version of ffi
gem "ffi"

# required patched version of kramdown
gem "kramdown"

group :jekyll_plugins do
  gem 'jekyll-include-cache'
  gem 'jekyll-loading-lazy'
  gem 'jekyll-paginate'
  gem 'jekyll-redirect-from'
  gem 'jekyll-regex-replace'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-tagging'
  gem 'liquid-c'
  gem 'liquid'
  gem 'base64'
  gem 'csv'
  gem 'logger'
end

gem "webrick"
